<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
    <header><%- include('partials/header') %></header>

    <div class="container mt-4">
        <h2 class="mb-4">My Wishlist</h2>

        <% if (products.length > 0) { %>
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="<%= product.image_urls %>" alt="<%= product.name %>"
                                        class="img-thumbnail me-2" style="width: 60px; height: 60px;">
                                    <div>
                                        <%= product.name %>
                                    </div>
                                </div>
                            </td>
                            <td><%= product.price || 'N/A' %></td>
                            <td>
                                <% if (product.stock > 0) { %>
                                    <span class="text-success">In stock</span>
                                <% } else { %>
                                    <span class="text-danger">Out of stock</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (product.stock > 0) { %>
                                    <button class="btn btn-sm btn-primary me-2"
                                        onclick="addToCart('<%= product.id %>')">
                                        <i class="fa fa-shopping-cart me-1"></i>Add to cart
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-sm btn-info me-2">Read more</button>
                                <% } %>

                                <button class="btn btn-sm btn-danger"
                                    onclick="removeWishlist('<%= product.id %>')">
                                    <i class="fa fa-times"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="text-center mt-5">
                <h4>No products in your wishlist!</h4>
                <p>Start adding your favorite products.</p>
            </div>
        <% } %>
    </div>

    <footer><%- include('partials/footer') %></footer>




    <script src="/js/wishlist.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</body>

</html>
