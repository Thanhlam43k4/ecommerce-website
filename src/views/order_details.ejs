<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Order Details - <%= orderDetails.order.id %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/css/order_details.css">
    <link rel="icon" type="image/x-icon" href="/image/uet.jpeg">

</head>
<body>
    <header>
        <%- include('partials/header') %>
    </header>

    <main class="container order-container">
        <% if (orderDetails && orderDetails.order) { %>
            <div class="order-header">
                <h1>Order #<span id="order-id"><%= orderDetails.order.id %></span></h1>
                <p class="text-muted">Placed on <span id="order-date">
                    <%= new Date(orderDetails.order.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </span></p>
                <span class="order-status status-success">
                    Success
                </span>                
            </div>

            <div class="row" >
                <div class="col-md-8">
                    <h3>Order Items</h3>
                    
                    <% if (orderDetails.items && orderDetails.items.length > 0) { %>
                        <% orderDetails.items.forEach(item => { %>
                            <div class="product-card">
                                <img src="<%= item.image_urls %>" 
                                     alt="<%= item.name %>" class="product-image">
                                <div class="product-info" onclick="viewProduct('<%= item.product_id %>')">
                                    <h5><%= item.name %></h5>
                                    <p class="text-muted">x<%= item.quantity %></p>
                                    <p class="text-muted">Price: $<%= item.price %> each</p>
                                    
                                    <div class="review-section">
                                        <% if (item.rating) { %>
                                            <div class="stars">
                                                <% for (let i = 0; i < 5; i++) { %>
                                                    <% if (i < item.rating) { %>
                                                        <i class="fa fa-star"></i>
                                                    <% } else { %>
                                                        <i class="fa fa-star"></i>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                        <% } %>
                                        <% if (item.comment) { %>
                                            <p class="review-comment mt-2"><em>"<%= item.comment %>"</em></p>
                                        <% } %>
                                        <% if (!item.rating && !item.comment) { %>
                                            <p class="review-comment mt-2 text-muted">You haven't reviewed this product yet </p>
                                        <% } %>
                                    </div>
                                    
                                </div>
                                <div class="product-price">
                                    <h5>$<%= (parseFloat(item.price) * item.quantity).toFixed(2) %></h5>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-muted">No items found in this order.</p>
                    <% } %>
                </div>
                
                <div class="col-md-4">
                    <h3>Order Summary</h3>

                    <div class="order-summary">
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Full name:</span>
                            <span><%= orderDetails.order.full_name %></span>     
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">City:</span>
                            <span><%= orderDetails.order.city %></span>     
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Street:</span>
                            <span><%= orderDetails.order.street %></span>     
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Phone number:</span>
                            <span><%= orderDetails.order.phone %></span>     
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Shipping:</span>
                            <span>Free</span>
                        </div>
                        <div class="d-flex justify-content-between fw-bold">
                            <span class="fw-bold">Total:</span>
                            <span>$<%= orderDetails.order.total_price %></span>
                        </div>
                    </div>
                    
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-danger">Order information is not available</div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer>
        <%- include('partials/footer') %>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    

    <script>
        function viewProduct(productId) {
            window.location.href = `/product/${productId}`;
        }       
    </script>
</body>
</html>