<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <div class="page-wrapper">
  <header><%- include('partials/header') %></header>
  <div class="content">
  <% if (user) { %>
    <div class="mt-5 p-4 border rounded bg-light container">
      <div class="best-selling-header">
        <div class="left-section">
          <span class="highlight-text">User</span>
        </div>
      </div>

      <div class="d-flex align-items-center">
        <img src="https://product.hstatic.net/1000333506/product/1024_1810cfc496c543b9b3090aa3d486b2b5.png"
          alt="User Avatar" class="rounded-circle me-3" style="width: 80px; height: 80px;">
        <div>
          <h5>
            <%= user.username %>
          </h5>
          <button class="btn btn-danger" onclick="window.location.href='/profile'">View Profile</button>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-6">
          <p><strong>Ratings</strong>: <span class="text-danger">★★★★★</span></p>
          <p><strong>Products</strong>: <span class="text-danger">
              <%= user.products ? user.products : '0' %>
            </span></p>
        </div>
        <div class="col-md-6">
          <p><strong>Phone</strong>: <span class="text-danger">039327262634</span></p>
          <p><strong>Email</strong>: <span class="text-danger">
              <%= user.email ? user.email : 'N/A' %>
            </span></p>
        </div>
      </div>
    </div>
    <% } %>


      <!-- Best Selling Products -->
      <div class="container mt-5">
        <div class="best-selling-header">
          <div class="left-section">
            <span class="highlight-text">Our Products</span>
            <h2 class="best-selling-title">Explore Our Products</h2>
          </div>
          <div class="store-button">
            <button class="view-all-btn">View All</button>
            <button class="view-all-btn" id="edit-products-btn">Edit Products</button>
          </div>
        </div>

        <% if (products && products.length> 0) { %>
          <div id="productCarousel" class="carousel slide">
            <!-- Điều hướng ở góc phải trên cùng -->
            <div class="carousel-controls">
              <button class="carousel-control-next" type="button" data-bs-target="#productCarousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
              </button>
              <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              </button>
            </div>

            <div class="carousel-inner">
              <% for (let i=0; i < products.length; i +=4) { %>
                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                  <div class="row">
                    <% for (let j=i; j < i + 4 && j < products.length; j++) { %>
                      <div class="col-md-3">
                        <div class="card p-3">
                          <img src="<%= products[j].image_urls %>" class="card-img-top" alt="<%= products[j].name %>">
                          <div class="icon-group">
                            <span class="icon-circle"><i class="fa fa-heart"></i></span>
                            <span class="icon-circle" onclick="viewProduct('<%= products[j].id %>')"><i
                                class="fa fa-eye"></i></span>
                          </div>
                          <div class="card-body text-center">
                            <h6>
                              <%= products[j].name %>
                            </h6>
                            <p>$<%= products[j].price %>
                            </p>
                            <p class="text-warning">
                              <%= '★' .repeat(products[j].stock % 5) + '☆' .repeat(5 - products[j].stock % 5) %>
                                (<%= products[j].reviews_count %>)
                            </p>
                          </div>
                        </div>
                      </div>
                      <% } %>
                  </div>
                </div>
                <% } %>
            </div>
          </div>
          <% } else { %>
            <p class="mt-3 text-center">No products available.</p>
            <% } %>

              <!-- Reviews Section -->
              <div class="mt-5 p-4 border rounded bg-light">
                <h5 class="text-danger">Reviews</h5>
                <textarea class="form-control mb-2" placeholder="Write your review here"></textarea>
                <div class="d-flex align-items-center">
                  <div class="me-auto text-warning">★★★★★</div>
                  <button class="btn btn-danger">Send Review</button>
                </div>
                <div class="mt-4 border-top pt-3">
                  <p><strong>10293029302</strong></p>
                  <p>15/2/2023</p>
                  <p class="text-warning">★★★★★</p>
                  <p>Good Product.</p>
                </div>
              </div>
      </div>

      <script src="/js/store.js"></script>
      <footer><%- include('partials/footer') %></footer>
    </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>