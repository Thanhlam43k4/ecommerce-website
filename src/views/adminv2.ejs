<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <!-- Bootstrap 5.3.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/adminv2.css">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>
        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <nav class="navbar navbar-light bg-light mb-4">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">UET Store > DASHB > Dashboard</a>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </nav>
            
        
<div class="container-fluid">
    <!-- Cards -->
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">TOTAL USER</h5>
                    <h2><%= totalUser %></h2>
                    <p class="card-text">+11% From previous period</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">ORDERS</h5>
                    <h2>$<%= orders %></h2>
                    <p class="card-text">-29% From previous period</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">AVERAGE PRICE</h5>
                    <h2>$<%= avgPrice %></h2>
                    <p class="card-text">0% From previous period</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">PRODUCT SOLD</h5>
                    <h2><%= productsSold %></h2>
                    <p class="card-text">+89% From previous period</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mt-4">
        <!-- Cột 1: Pie Chart -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">MONTHLY EARNINGS</h5>
                    <canvas id="donutChart"></canvas>
                </div>
            </div>
        </div>
    
        <!-- Cột 2: Chứa 2 dòng -->
        <div class="col-md-8">
            <!-- Dòng 1: 2 biểu đồ -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">USER</h5>
                            <canvas id="areaChart"></canvas>
                        </div>
                    </div>
                </div>
    
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">ORDER</h5>
                            <canvas id="barChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
    
            <!-- Dòng 2: 1 biểu đồ -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">REVENUE</h5>
                            <canvas id="lineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <!-- Table -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">MONTHLY EARNINGS</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% monthlyEarnings.forEach(item => { %>
                                <tr>
                                    <td><%= item.name %></td>
                                    <td>$<%= item.value %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Custom JS -->
<script>
    window.mostRecentlyMonth = JSON.parse('<%- JSON.stringify(mostRecentlyMonth) %>');
  </script>
<script src="/js/adminv2.js"></script>
</body>
</html>