<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
    <header><%- include('partials/header') %></header>
    <div class="container mt-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/gaming">Gaming</a></li>
            </ol>
        </nav>



        <div class="row">
            <div class="col-md-6">
                <img src="<%= product.image_urls %>" class="img-fluid" alt="<%= product.name %>">
            </div>
            <div class="col-md-6">
                <div class="row">
                    <h2 class="col-md-6">
                        <%= product.name %>
                    </h2><span class="icon-circle"><i class="fa fa-heart"></i></span>
                </div>

                <p class="text-warning">★★★★★ (1 Reviews) | <span class="text-success">In Stock</span></p>
                <h4 class="text-danger">$<%= product.price %>
                </h4>
                <p>
                    <%= product.description %>
                </p>

                <div class="d-flex align-items-center">
                    <button class="btn btn-outline-secondary" onclick="decreaseQuantity()">-</button>
                    <input type="text" id="quantity" class="form-control text-center mx-2" style="width: 50px;"
                        value="1">
                    <button class="btn btn-outline-secondary" onclick="increaseQuantity()">+</button>
                </div>

                <button class="btn btn-danger mt-3">Add To Cart</button>

                <div class="mt-3 p-3 border rounded">
                    <p><strong>Free Delivery</strong></p>
                    <p>Enter your postal code for Delivery Availability</p>
                    <p><strong>Return Delivery</strong></p>
                    <p>Free 30 Days Delivery Returns.</p>
                </div>
            </div>
        </div>
    </div>




    <!-- Best Selling Products -->
    <div class="container mt-5">

        <div class="best-selling-header">
            <div class="left-section">
                <span class="highlight-text">This Month</span>
                <h2 class="best-selling-title">Best Selling Products</h2>
            </div>
            <button class="view-all-btn">View All</button>
        </div>

        <div id="productCarousel" class="carousel slide">
            <!-- Điều hướng ở góc phải trên cùng -->
            <div class="carousel-controls">
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>

            </div>

            <div class="carousel-inner">
                <% for (let i=0; i < product.length; i +=4) { %> <!-- Hiển thị 4 sản phẩm mỗi slide -->
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j=i; j < i + 4 && j < product.length; j++) { %>
                                <div class="col-md-3">
                                    <div class="card p-3">
                                        <img src="<%= product[j].image_urls %>" class="card-img-top"
                                            alt="<%= product[j].name %>">
                                        <div class="icon-group">
                                            <span class="icon-circle"><i class="fa fa-heart"></i></span>
                                            <span class="icon-circle" onclick="viewProduct('<%= product[j].id %>')"><i
                                                    class="fa fa-eye"></i></span>
                                        </div>
                                        <div class="card-body text-center">
                                            <h6>
                                                <%= product[j].name %>
                                            </h6>
                                            <p>$<%= product[j].price %>
                                            </p>
                                            <p class="text-warning">
                                                <%= '★' .repeat(product[j].stock % 5) + '☆' .repeat(5 - product[j].stock
                                                    % 5) %>
                                                    (<%= product[j].reviews_count %>)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>

        <!-- Phần Reviews -->
        <div id="reviewsContainer" class="mt-5 p-4 border rounded bg-light">
            <h5 class="text-danger">Reviews</h5>

            <% if (reviews && reviews.length> 0) { %>
                <% reviews.forEach(review=> { %>
                    <div class="review-item mb-3">
                        <p><strong>Buyer ID: <%= review.buyer_id %></strong></p>
                        <p>
                            <%= new Date(review.created_at).toLocaleDateString() %>
                        </p>
                        <p class="text-warning">
                            <%= '★' .repeat(review.rating) %>
                                <%= '☆' .repeat(5 - review.rating) %>
                        </p>
                        <p>
                            <%= review.comment %>
                        </p>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No reviews for this product yet.</p>
                            <% } %>

                                <!-- Form gửi review mới, xử lý qua routes phía server -->
                                <form action="/api/reviews" method="POST">
                                    <!-- Truyền product_id từ phía server -->
                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                    <div class="mb-2">
                                        <label for="rating">Rating:</label>
                                        <select name="rating" id="rating" class="form-control">
                                            <option value="1">★☆☆☆☆</option>
                                            <option value="2">★★☆☆☆</option>
                                            <option value="3">★★★☆☆</option>
                                            <option value="4">★★★★☆</option>
                                            <option value="5">★★★★★</option>
                                        </select>
                                    </div>
                                    <div class="mb-2">
                                        <label for="comment">Comment:</label>
                                        <textarea name="comment" id="comment" class="form-control"
                                            placeholder="Write your review here"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-danger">Send Review</button>
                                </form>
        </div>

    </div>



    
    <footer><%- include('partials/footer') %></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>