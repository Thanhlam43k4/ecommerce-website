<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= categoryName %> - UET Ecommerce Website
  </title>
  <!-- Bootstrap 5.3.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Font Awesome 4.7.0 CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="icon" type="image/x-icon" href="/image/uet.jpeg">
  <link rel="stylesheet" type="text/css" href="/css/product_cart.css">

</head>


<header><%- include('partials/header') %></header>
<section class="banner-container text-center position-relative">
  <img src="/image/phone.png" class="img-fluid w-100" alt="Banner">

</section>

<body>

  <div class="container mt-5">

    <div class="best-selling-header">
      <div class="left-section">
        <span class="highlight-text">This Year</span>
        <h2 class="best-selling-title">Best Category Product</h2>
      </div>
      <button class="view-all-btn" onclick="window.location.href='/'">View All</button>

    </div>

    <div class="row">
      <% if (Array.isArray(products) && products.length> 0) { %>
        <% products.forEach(product=> { %>
          <div class="col-md-3">
            <div class="card product-card p-3 mb-4">
              <img src="<%= product.image_urls %>" class="card-img-top product-image" alt="<%= product.name %>">
              <div class="card-body text-center">
                <h6 class="product-name">
                  <%= product.name %>
                </h6>
                <p class="product-description text-muted">
                  <%= product.description.substring(0, 50) %>...
                </p>
                <p class="fw-bold text-primary">$<%= product.price %>
                </p>
                <p class="text-warning">
                  <%= '★' .repeat(product.rating) + '☆' .repeat(5 - product.rating) %>
                </p>
                <p class="text-secondary">Stock: <%= product.stock %>
                </p>
                <a href="/product/<%= product.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <p class="text-center">Không có sản phẩm nào trong danh mục này.</p>
              <% } %>

    </div>
    <h3 class="fw-bold mt-5">Sản phẩm bạn có thể thích</h3>
    <div class="product-slider">
      <div class="product-wrapper d-flex">
        <% featuredProducts.forEach(product=> { %>
          <div class="product-item">
            <div class="card product-card p-3 mb-4">
              <img src="<%= product.image_urls %>" class="card-img-top product-image" alt="<%= product.name %>">
              <div class="card-body text-center">
                <h6 class="product-name">
                  <%= product.name %>
                </h6>
                <p class="fw-bold text-primary">$<%= product.price %>
                </p>
                <a href="/product/<%= product.id %>" class="btn btn-success">Xem chi tiết</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>




  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <footer><%- include('partials/footer') %></footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>