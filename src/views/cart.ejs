<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gi·ªè H√†ng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/css/cart_style.css">
    <link rel="icon" type="image/x-icon" href="/image/uet.png">

</head>

<body>
    <header><%- include('partials/header') %></header>

    <div class="container my-5">
        <h2 class="mb-4">üõí Your cart</h2>

        <!-- B·∫£ng Gi·ªè H√†ng -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="bg-light">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th> <!-- üÜï Th√™m c·ªôt H√†nh ƒê·ªông -->
                    </tr>
                </thead>
                <tbody>
                    <% let totalAmount=0; %> <!-- ƒê·∫∑t ngo√†i block if -->

                        <% if (!cartItems || cartItems.length===0) { %>
                            <tr>
                                <td colspan="5" class="text-center text-muted">üõë No product in cart.</td>
                            </tr>
                            <% } else { cartItems.forEach(item=> {
                                let price = parseFloat(item.price);
                                let subtotal = price * item.quantity;
                                totalAmount += subtotal;
                                %>
                                <tr id="item-<%= item.id %>"> <!-- G√°n id cho t·ª´ng s·∫£n ph·∫©m -->
                                    <td>
                                        <img src="<%= item.image_urls %>" alt="product" class="me-2"
                                            style="width: 50px;">
                                        <%= item.name %>
                                    </td>
                                    <td>$<%= price.toFixed(2) %>
                                    </td>
                                    <td>
                                        <div class="input-group input-group-sm">
                                            <input type="number" class="form-control" id="amount-<%= item.id %>" value="1"
                                                min="1" max="<%= item.stock %>"
                                                oninput="validateAmount('<%= item.id %>', '<%= item.stock %>')">
                                            <span class="input-group-text">/ <%= item.stock %></span>
                                        </div>
                                    </td>
                                    <td class="subtotal">$<%= subtotal.toFixed(2) %>
                                    </td>
                                    <td>
                                        <!-- N√∫t X√≥a -->
                                        <button class="btn btn-danger btn-sm" onclick="removeItem('<%= item.product_id %>')">
                                            üóëÔ∏è Delete
                                        </button>
                                    </td>
                                </tr>
                                <% }) } %>
                </tbody>
            </table>
        </div>

        <!-- N√∫t v√† Th√¥ng Tin -->
        <div class="d-flex justify-content-between my-3">
            <a href="/" class="btn btn-outline-secondary">üîô Back to Store</a>
            <button class="btn btn-outline-dark">‚ôªÔ∏è Update cart</button>
        </div>

        <!-- T·ªïng Ti·ªÅn v√† Checkout -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="üéüÔ∏è Coupon">
                    <button class="btn btn-danger">Apply</button>
                </div>
            </div>
            <div class="col-md-6">
                <% if (cartItems && cartItems.length> 0) { %>
                    <p><strong>Provisional: </strong><span id="total">$<%= totalAmount.toFixed(2) %></span></p>
                    <p><strong>Shipping:</strong> Free</p>
                    <hr>
                    <p><strong>Total: <span id="grand-total">$<%= totalAmount.toFixed(2) %></span></strong></p>
                    <form action="/cart/checkout" method="GET">
                        <button type="submit" class="btn btn-danger w-100">üõí Order</button>
                    </form>
                    <% } else { %>
                        
                        <% } %>
            </div>
        </div>
    </div>

    <script src="/js/cart.js"></script>


    <footer><%- include('partials/footer') %></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>