<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uet Ecommerce Website</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" type="image/x-icon" href="/image/uet.jpeg">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>

    <header><%- include('partials/header') %></header>
    <% if (errorMessage) { %>
        <div class="alert alert-danger text-center" role="alert">
            <%= errorMessage %>
        </div>
    <% } %>
    <!-- Categories -->
    <div class="container mt-5">
        <h4 class="fw-bold">Browse By Category</h4>
        <div class="row">
            <% let categories=[ { id: 1, name: 'Phones' , icon: 'fa-mobile' }, { id: 2, name: 'Computers' ,
                icon: 'fa-laptop' }, { id: 3, name: 'SmartWatch' , icon: 'fa-clock-o' }, { id: 4, name: 'Camera' ,
                icon: 'fa-camera' }, { id: 5, name: 'HeadPhones' , icon: 'fa-headphones' }, { id: 6, name: 'Gaming' ,
                icon: 'fa-gamepad' } ]; %>
                <% categories.forEach(category=> { %>
                    <div class="col-md-2 text-center">
                        <div class="border rounded p-3 category-box"
                            onclick="window.location.href='/category/<%= category.id %>'">
                            <i class="fa <%= category.icon %> fa-2x"></i>
                            <p class="mt-2">
                                <%= category.name %>
                            </p>
                        </div>
                    </div>
                    <% }); %>
        </div>
    </div>



    <!-- Best Selling Products -->
    <div class="container mt-5">

        <div class="best-selling-header">
            <div class="left-section">
                <span class="highlight-text">This Month</span>
                <h2 class="best-selling-title">Best Selling Products</h2>
            </div>
            <button class="view-all-btn">View All</button>
        </div>

        <div id="productCarousel" class="carousel slide">
            <!-- Điều hướng ở góc phải trên cùng -->
            <div class="carousel-controls">
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>

            </div>

            <div class="carousel-inner">
                <% for (let i=0; i < products.length; i +=4) { %> <!-- Hiển thị 4 sản phẩm mỗi slide -->
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j=i; j < i + 4 && j < products.length; j++) { %>
                                <div class="col-md-3">
                                    <div class="card p-3">
                                        <img src="<%= products[j].image_urls %>" class="card-img-top" alt="<%= products[j].name %>">
                                        <div class="icon-group">
                                            <span class="icon-circle"><i class="fa fa-heart"></i></span>
                                            <span class="icon-circle" onclick="viewProduct('<%= products[j].id %>')"><i
                                                    class="fa fa-eye"></i></span>
                                        </div>
                                        <div class="card-body text-center">
                                            <h6>
                                                <%= products[j].name %>
                                            </h6>
                                            <p>$<%= products[j].price %>
                                            </p>
                                            <p class="text-warning">
                                                <%= '★' .repeat(products[j].stock % 5) + '☆' .repeat(5 -
                                                    products[j].stock % 5) %>
                                                    (<%= products[j].reviews_count %>)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>

    </div>

    <!-- Explore Our Products -->
    <div class="container mt-5">

        <div class="best-selling-header">
            <div class="left-section">
                <span class="highlight-text">This Month</span>
                <h2 class="best-selling-title">Best Selling Products</h2>
            </div>
            <button class="view-all-btn">View All</button>
        </div>

        <div id="productCarousel11" class="carousel slide">
            <!-- Điều hướng ở góc phải trên cùng -->
            <div class="carousel-controls">
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel11"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel11"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>

            </div>

            <div class="carousel-inner">
                <% for (let i=0; i < products.length; i +=4) { %> <!-- Hiển thị 4 sản phẩm mỗi slide -->
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j=i; j < i + 4 && j < products.length; j++) { %>
                                <div class="col-md-3">
                                    <div class="card p-3">
                                        <img src="<%= products[j].image_urls %>" class="card-img-top" alt="<%= products[j].name %>">
                                        <div class="icon-group">
                                            <span class="icon-circle"><i class="fa fa-heart"></i></span>
                                            <span class="icon-circle" onclick="viewProduct('<%= products[j].id %>')"><i
                                                    class="fa fa-eye"></i></span>
                                        </div>
                                        <div class="card-body text-center">
                                            <h6>
                                                <%= products[j].name %>
                                            </h6>
                                            <p>$<%= products[j].price %>
                                            </p>
                                            <p class="text-warning">
                                                <%= '★' .repeat(products[j].stock % 5) + '☆' .repeat(5 -
                                                    products[j].stock % 5) %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>




    <footer><%- include('partials/footer') %></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        function addToWishlist(productId) {
            fetch('/wishlist/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId })
            })
                .then(response => response.json())
                .then(data => alert(data.message))
                .catch(error => console.error('Error:', error));
        }

        function viewProduct(productId) {
            window.location.href = `/product/${productId}`;
        }
    </script>
</body>

</html>