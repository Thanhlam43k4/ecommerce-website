<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>homelay</title>
    
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
       
       <header><%- include('partials/header-wthuser') %></header> 
    
    <!-- Categories -->
    <div class="container mt-5">
        <h4 class="fw-bold">Browse By Category</h4>
            <div class="row">
                <% let categories = [
                    { name: 'Phones', icon: 'fa-mobile', link: '/phones' },
                    { name: 'Computers', icon: 'fa-laptop', link: '/computers' },
                    { name: 'SmartWatch', icon: 'fa-clock-o', link: '/smartwatch' },
                    { name: 'Camera', icon: 'fa-camera', link: '/camera' },
                    { name: 'HeadPhones', icon: 'fa-headphones', link: '/headphones' },
                    { name: 'Gaming', icon: 'fa-gamepad', link: '/user' }
                ]; %>
                <% categories.forEach(category => { %>
                    <div class="col-md-2 text-center">
                        <div class="border rounded p-3 category-box" onclick="window.location.href='<%= category.link %>'">
                            <i class="fa <%= category.icon %> fa-2x"></i> 
                            <p class="mt-2"><%= category.name %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        
    </div>
    


    <!-- Best Selling Products -->
    <div class="container mt-5">
        
        <div class="best-selling-header">
            <div class="left-section">
                <span class="highlight-text">This Month</span>
                <h2 class="best-selling-title">Best Selling Products</h2>
            </div>
            <button class="view-all-btn">View All</button>
        </div>
        
        <div id="productCarousel" class="carousel slide">
            <!-- Điều hướng ở góc phải trên cùng -->
            <div class="carousel-controls">
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                
            </div>
        
            <!-- Nội dung carousel -->
            <div class="carousel-inner">
                <% for (let i = 0; i < 10; i += 4) { %> <!-- Hiển thị 4 sản phẩm mỗi slide -->
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j = i; j < i + 4 && j < 10; j++) { %>
                                <div class="col-md-3">
                                    <div class="card p-3">
                                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Product">
                                        <div class="card-body text-center">
                                            <h6>RTX 5080 16G Venus</h6>
                                            <p>$10</p>
                                            <p class="text-warning">★★★★★ (65)</p>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        
        

    </div>

    <!-- Explore Our Products -->
    <div class="container mt-5">
        
        <div class="best-selling-header">
            <div class="left-section">
                <span class="highlight-text">This Month</span>
                <h2 class="best-selling-title">Explore Our Products</h2>
            </div>
            <button class="view-all-btn">View All</button>
        </div>
        
        <div id="productCarousel1" class="carousel slide">
            <!-- Điều hướng ở góc phải trên cùng -->
            <div class="carousel-controls">
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel1" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel1" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                
            </div>
        
            <!-- Nội dung carousel -->
            <div class="carousel-inner">
                <% for (let i = 0; i < 10; i += 4) { %> <!-- Hiển thị 4 sản phẩm mỗi slide -->
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j = i; j < i + 4 && j < 10; j++) { %>
                                <div class="col-md-3">
                                    <div class="card p-3">
                                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Product">
                                        <div class="card-body text-center">
                                            <h6>RTX 5080 16G Venus</h6>
                                            <p>$10</p>
                                            <p class="text-warning">★★★★★ (65)</p>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        
        

    </div>

    


    <footer><%- include('partials/footer') %></footer> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
</body>
</html>